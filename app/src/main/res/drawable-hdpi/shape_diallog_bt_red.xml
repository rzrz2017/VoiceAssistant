<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <!--
        描边
        <stroke android:width="5dp"
                android:color="#f00"/> 宽和颜色
            -->
            <!-- 圆角半径 -->
            <corners android:radius="30dp" />
            <!-- 大小 -->
            <size android:height="60dp" android:width="120dp" /> <!-- 宽度和高度 -->
            <solid android:color="@android:color/holo_red_dark" />

        </shape>
    </item>


    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="30dp" />

            <gradient android:angle="180" android:endColor="#fff" android:startColor="@android:color/holo_red_dark" /> <!-- 一开始的颜色、结束的颜色 angle＝“90”是从上到下来渲染的，android:angle＝“180”是从右到左来渲染 -->
            <size android:height="60dp" android:width="120dp" /> <!-- 宽度和高度 -->

        </shape>
    </item>

</selector>