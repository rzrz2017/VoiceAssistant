<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yorkbj"
    android:orientation="horizontal"
    android:paddingTop="60dp"
    android:paddingBottom="10dp"
    android:paddingLeft="60dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/search"
                android:layout_marginRight="20dp"
                android:background="@drawable/corners"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_search" />

                <EditText
                    android:id="@+id/search_key"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="搜索歌曲"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/default_color"
                    android:textColorHint="@color/default_color2" />

                <ImageView
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/ic_clear" />

            </LinearLayout>


            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="22dp"
                android:layout_marginLeft="22dp"
                android:background="@drawable/bg_select_shape"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="搜索"
                android:textColor="@color/default_color" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"
            android:textColor="@color/default_color"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <com.szhklt.VoiceAssistant.view.TagCloudLayout
            android:id="@+id/container"
            app:tagSpacing="15dp"
            app:lineSpacing="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.szhklt.VoiceAssistant.view.TagCloudLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索历史"
            android:textColor="@color/default_color"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <GridView
            android:listSelector="@drawable/adapter_selector"
            android:numColumns="2"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid"
            >
        </GridView>

    </LinearLayout>

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_line8" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left"
            android:text="搜索结果"
            android:textColor="@color/default_color"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ListView
                android:id="@+id/list_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:divider="@color/default_color2"
                android:dividerHeight="1dip"
                android:listSelector="@drawable/adapter_selector">

            </ListView>

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressbar"
                style="@android:style/Widget.ProgressBar.Large"
                android:indeterminateDrawable="@drawable/progress_gradient"
                android:indeterminateTintMode="src_atop"
                android:layout_width="120dp"
                android:layout_height="120dp"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/default_color"
                android:text="数据加载中..." />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>






