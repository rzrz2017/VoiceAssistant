<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dip"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_ds_bg"
         android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:text="提示"
            android:textSize="22sp"
            android:textColor="#ffe8d463"/>

    <TextView
        android:id="@+id/tiptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:text="主人,网络连接异常哦!"
        android:textSize="20sp"
        android:textColor="#ffe8d463"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#88e8d463"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dialog_left_white"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="算了吧"
            android:textSize="20sp"
            android:textColor="#ffe8d463"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#88e8d463"/>

        <TextView
            android:id="@+id/okok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dialog_right_white"
            android:gravity="center"
            android:layout_weight="1.0"
            android:text="去连接"
            android:textSize="20sp"
            android:textColor="#ffe8d463"/>

    </LinearLayout>
</LinearLayout>

</RelativeLayout>