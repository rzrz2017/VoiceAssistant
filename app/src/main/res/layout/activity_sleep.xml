    <TextView
        android:id="@+id/sleep_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="50dip"
        android:textColor="#EEE5DE"
        android:textSize="38dip" />

    <TextView
        android:id="@+id/sleep_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sleep_location"
        android:layout_marginLeft="30dip"
        android:layout_toRightOf="@+id/sleep_location"
        android:textColor="#EE9A00"
        android:textSize="38dip" />

    <TextView
        android:id="@+id/sleep_weather_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sleep_weather_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="74dp"
        android:textColor="#EEDC82"
        android:textSize="30dip" />

    <ImageView
        android:id="@+id/sleep_weather_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout1"
        android:layout_toLeftOf="@+id/sleep_weather_text"
         />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/sleep_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sleep_weather_image"
        android:layout_below="@+id/sleep_weather_text"
        android:textColor="#EEE5DE"
        android:textSize="20dip" />

</RelativeLayout>