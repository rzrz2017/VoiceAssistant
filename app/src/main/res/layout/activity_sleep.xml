<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sleepall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE000000"
    android:orientation="vertical" >

    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="560dip"
        android:layout_height="320dip"
        android:layout_centerInParent="true"
        android:background="@drawable/bj_sleep" >

          
        <TextClock
            android:id="@+id/deskClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#EEE5DE"
            android:textSize="200dip" />
        
        
        <TextView
            android:id="@+id/sleep_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:textColor="#EEE5DE"
            android:textSize="30dip" />

        <TextView
            android:id="@+id/sleep_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sleep_data"
            android:layout_marginLeft="115dip"
            android:layout_marginTop="25dip"
            android:textColor="#EEE5DE"
            android:textSize="25dip" />
    </RelativeLayout>
    

