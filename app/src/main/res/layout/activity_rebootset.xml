<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/yorkbj"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="150dip">

		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="清理设置"
			android:textColor="#ffe8d463"
			android:textSize="45dip" />

		<ImageView
			android:id="@+id/back"
			android:layout_width="70dip"
			android:layout_height="70dip"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="30dip"
			android:layout_marginTop="30dip"
			android:src="@drawable/bussiness_personal_closed_new" />

		<com.szhklt.VoiceAssistant.view.SwitchView
		    android:id="@+id/v_switch"
		    android:layout_width="60dip"
		    android:layout_height="60dip"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="92dp"
		    app:isOpened="true"
		    app:primaryColor="#71C671" />

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="match_parent"
		android:layout_height="120dip"
		android:layout_centerHorizontal="true"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/firstLine"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<RelativeLayout
				android:layout_width="0dip"
				android:layout_height="60dip"
				android:layout_weight="2">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="默认清理时间："
					android:textColor="#AAe8d463"
					android:textSize="32dip" />
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="0dip"
				android:layout_height="60dip"
				android:layout_weight="2">

				<TextView
					android:id="@+id/defauttime_tv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="凌晨 04时00分"
					android:textColor="#33e8d463"
					android:textSize="30dip" />



			</RelativeLayout>
		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<View
				android:layout_width="700dip"
				android:layout_height="1dip"
				android:layout_centerHorizontal="true"
				android:background="#33ffffff" />
		</RelativeLayout>

		<LinearLayout
			android:id="@+id/secondLine"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<RelativeLayout
				android:layout_width="0dip"
				android:layout_height="60dip"
				android:layout_weight="2">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="修改清理时间："
					android:textColor="#AAe8d463"
					android:textSize="32dip" />
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="0dip"
				android:layout_height="60dip"
				android:layout_weight="2">

				<TextView
					android:id="@+id/suretime"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text=""
					android:textColor="#e8d463"
					android:textSize="30dip" />

                <ImageView
                    android:id="@+id/gotosettime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="80dp"
                    android:src="@drawable/btn_web_forward_normal" />

			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/timeset"
		android:layout_width="match_parent"
		android:layout_height="200dip"
		android:layout_marginTop="40dip">

		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<LinearLayout
				android:id="@+id/linearLayout2"
				android:layout_width="300dip"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="10dip"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<TextView
						android:id="@+id/am_pm"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true"
						android:text=""
						android:textColor="#fff"
						android:textSize="30dip" />
				</RelativeLayout>

				<com.szhklt.VoiceAssistant.view.WheelView
					android:id="@+id/time_hour"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1" />

				<com.szhklt.VoiceAssistant.view.WheelView
					android:id="@+id/time_minute"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</LinearLayout>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<LinearLayout
				android:layout_width="400dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="1"
					android:orientation="horizontal">

					<RelativeLayout
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="2">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true"
							android:layout_centerVertical="true"
							android:text="已选择："
							android:textColor="#fff"
							android:textSize="28dip" />
					</RelativeLayout>

					<RelativeLayout
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="3">

						<TextView
							android:id="@+id/time_chose"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentLeft="true"
							android:layout_centerVertical="true"
							android:textColor="#0f0"
							android:textSize="28dip" />
					</RelativeLayout>
				</LinearLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="1">

					<Button
						android:id="@+id/sure"
						android:layout_width="200dip"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:background="@drawable/shape_dialog_bt_green_red"
						android:text="确定"
						android:textColor="#000"
						android:textSize="30dip" />
				</RelativeLayout>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>


</LinearLayout>