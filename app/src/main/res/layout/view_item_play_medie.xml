<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_media_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:textColor="@drawable/list_select_name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_media_name"
        android:layout_width="420dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tv_media_sum"
        android:singleLine="true"
        android:text=""
        android:textColor="@drawable/list_select_name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_media_auther"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_media_name"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@drawable/list_select_auther"
        android:textSize="18dp" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_media_isplaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_media_auther"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/online_square3s_lib_normal" />

</RelativeLayout>